    </div>
    <h2 id="coffee" style="padding-left: 2%;">Coffee</h2>
    <div class="grid">
        {{#each products}}

            {{#ifCond this.category 'Coffee'}}       
                <div class="container">
                    <div class="product-photo"><img src="{{this.img_path}}"></div>
                    <div class="product-name">{{this.name}}</div>
                    <div class="product-description">{{this.description}}</div>
                    <table>
                        <th>
                            <div class="product-price">{{this.price}}.000&#273</div>
                            {{#if this.cost}}
                                <div class="product-pre-price">{{this.cost}}.000&#273</div>
                            {{/if}}
                        </th>
                        <td><button class="addBtn" name="{{this.id}}:{{this.name}}" value="{{this.price}}000">+</button></td>
                    </table>
                </div>
            {{/ifCond}}
        {{/each}}
    </div>

